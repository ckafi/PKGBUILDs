# Maintainer: Tobias Frilling <tobias@frilling-online.de>
pkgname=ttf-monaco
pkgver=5.1
pkgrel=3
pkgdesc="A monospaced sans-serif typeface by Apple Inc."
arch=('any')
license=('unknown')
url="http://www.apple.com/"
depends=('fontconfig')
replaces=('monaco_linux' 'monaco-linux-font')
conflicts=('monaco_linux' 'monaco-linux-font')
install=ttf-monaco.install
source=("http://www.gringod.com/wp-upload/MONACO.TTF")
sha1sums=('80f9fe49c1962f27c887607e080d3bd8af22bf68')

package() {
  install -d "$pkgdir/usr/share/fonts/TTF/"
  install -m644 MONACO.TTF "$pkgdir/usr/share/fonts/TTF/"
}
