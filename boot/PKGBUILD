# Maintainer: Tobias Frilling <tobias@frilling-online.de>
pkgname=boot
pkgver=2.0.0_rc9
pkgrel=1
pkgdesc="A Clojure build framework and ad-hoc Clojure script evaluator"
arch=('any')
url="https://github.com/boot-clj/boot"
license=("EPL")
depends=('java-environment' 'bash')
source=("https://github.com/boot-clj/boot/releases/download/2.0.0-rc9/boot.sh")
sha1sums=('e530c6861db597e91c3e5a8d476d3f54e1a1dc7d')

package() {
  cd ${srcdir}
  install -m 755 -D boot.sh ${pkgdir}/usr/bin/boot
}
