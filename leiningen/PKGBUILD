# Maintainer: Tobias Frilling <tobias@frilling-online.de>
pkgname=leiningen
pkgver=2.5.0
pkgrel=1
epoch=1
pkgdesc="Automating Clojure projects without setting your hair on fire."
arch=('any')
url="http://github.com/technomancy/leiningen"
license=("EPL")
depends=('java-environment' 'bash')
optdepends=('rlwrap: for readline support'
            'leiningen-completions: completion scripts')

_commit="c78a8110a8f4db2e84c0daf09ed1145a8aa18c30"
source=("https://raw.githubusercontent.com/technomancy/leiningen/$_commit/bin/lein"
        "https://raw.githubusercontent.com/technomancy/leiningen/$_commit/doc/lein.1")
sha1sums=('119b4c8bacfa7f7809bce3cd0233b186ffdbc6d5'
          '290b634c0648e0710911aeee71f795401af6b2e7')

package() {
  cd ${srcdir}
  install -m 755 -D lein ${pkgdir}/usr/bin/lein
  install -D "${srcdir}"/lein.1 "${pkgdir}"/usr/share/man/man1/lein.1
}
